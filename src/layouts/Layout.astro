---
import Sidebar from '../components/Sidebar.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Val's thoughts - A seasoned technologist's blog" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<div class="container">
			<Sidebar />
			<main>
				<slot />
			</main>
		</div>
	</body>
</html>
<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--background: #13151a;
		--text: #ffffff;
	}
	html {
		font-family: system-ui, sans-serif;
		background: var(--background);
		color: var(--text);
	}
	body {
		margin: 0;
		padding: 0;
	}
	.container {
		display: flex;
		min-height: 100vh;
	}
	main {
		flex-grow: 1;
		padding: 2rem;
	}
</style>